<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-site-verification" content="8cgTPJIzsiUxNeHRW6elPN31ekEf_QbDbIyGyUBqhsw" />
    <title>@ViewData["Title"] - diplom</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <header>
        <div class="sss">
            <div class="containerr" style="
                                     display: flex;
                                     flex-direction: row;">
                <img src="~/logo.png" alt="..." style="width: 100px; height: 100px;">
            </div>

           

            <div class="containerr">
                <div class="containerr" style="flex-direction: column;
                        flex-direction: column;
                        align-items: flex-start;
                        border-right: 1px solid #6283dc;">
                    <p style="margin:0">ООО "БГМСервисГрупп"</p>
                    <p style="margin:0">г.Гомель, ул. Текстильная,</p>
                    <p style="margin:0">дом 3а</p>
                </div>
                <div class="containerr" style="flex-direction: column;">
                    <p style="margin:0">+375 (29) 656-63-74</p>
                    <p style="margin:0">+375 (29) 345-42-78</p>
                    <p style="margin:0">e-mail: bgms2001@mail.ru</p>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style=" margin-bottom: 1.3rem; max-width: 1366px; margin-left: auto; margin-right: auto; background-color: #6283dc !important; ">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @{var a = ViewData["Title"].ToString() == "Главная" ? "active" : "asd";}
                @{var o = ViewData["Title"].ToString() == "Отзывы" ? "active" : "asd";}
                @{var k = ViewData["Title"].ToString() == "Каталог" ? "active" : "asd";}
                @{var r = ViewData["Title"].ToString() == "Контакты" ? "active" : "asd";}
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white htt @a" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white htt @o" asp-area="" asp-controller="Home" asp-action="Customer">Отзывы</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white htt @k" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Каталог
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" asp-route-category="Метрополитен">Метрополитен</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" asp-route-category="Вагонная служба">Вагонная служба</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" asp-route-category="Локомотивная служба">Локомотивная служба</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" asp-route-category="Вагонные участки">Вагонные участки</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" asp-route-category="Прочие изделия">Прочие изделия</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" asp-route-category="Ремонтные работы">Ремонтные работы</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white htt @r" asp-area="" asp-controller="Home" asp-action="Info">Контакты</a>
                        </li>
                    </ul>
                    <form class="d-flex" asp-controller="Home" asp-action="Privacy">
                        <input class="form-control me-2" name="category" value="Прочие изделия" type="search" placeholder="Метрополитен" aria-label="Поиск">
                        <button class="btn btn-outline-success" type="submit" style="color: aliceblue; border-color: aliceblue; ">Поиск</button>
                    </form>
                </div>
            </div>
        </nav>
        
    </header>
    <div class="container" style=" max-width: 1366px; padding: 0;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - diplom</a>
        </div>
    </footer>

